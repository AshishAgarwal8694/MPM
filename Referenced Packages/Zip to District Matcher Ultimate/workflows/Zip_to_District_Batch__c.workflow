        <operation>Literal</operation>
        <protected>false</protected>
        <targetObject>Zip_to_District__c</targetObject>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_Parent_Batch_as_Error</fullName>
        <field>Batch_Status__c</field>
