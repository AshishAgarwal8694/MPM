        <description>Send Batch Complete Confirmation</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>KnowWho_ZDM_Emails/ZDM_Complete_Messge</template>
    </alerts>
    <alerts>
        <fullName>Send_Email_with_Error_Code</fullName>
        <description>Send Email with Error Code</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>KnowWho_ZDM_Emails/ZDM_Error_Messge</template>
    </alerts>
    <fieldUpdates>
