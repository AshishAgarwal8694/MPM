        <name>Set Parent Batch as Processing</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <targetObject>Zip_to_District__c</targetObject>
    </fieldUpdates>
    <rules>
        <fullName>Mark Batch as Complete</fullName>
        <actions>
            <name>Send_Batch_Complete_Confirmation</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Set_Credits_Available</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Set_Last_Processed_on_Parent_Batch</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Set_Parent_Batch_as_Complete</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Zip_to_District_Batch__c.Status__c</field>
            <operation>equals</operation>
            <value>Complete</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Mark Batch as Error</fullName>
        <actions>
            <name>Send_Email_with_Error_Code</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Set_Credits_Available</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Set_Last_Processed_on_Parent_Batch</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Set_Parent_Batch_as_Error</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
