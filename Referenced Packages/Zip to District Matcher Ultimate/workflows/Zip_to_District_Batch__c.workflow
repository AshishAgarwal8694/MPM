        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <targetObject>Zip_to_District__c</targetObject>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_Last_Processed_on_Parent_Batch</fullName>
        <field>Last_Processed__c</field>
        <formula>now()</formula>
        <name>Set Last Processed on Parent Batch</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <targetObject>Zip_to_District__c</targetObject>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_Parent_Batch_as_Complete</fullName>
        <field>Batch_Status__c</field>
